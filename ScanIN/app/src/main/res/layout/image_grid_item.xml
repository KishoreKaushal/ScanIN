<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginBottom="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="7dp"
        android:id="@+id/img_container"
        tools:ignore="ExtraText ">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintCircleRadius="10dp"
        android:background="@color/black"
        android:id="@+id/image_thumbnail" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_position"
        android:padding="4dp"
        android:elevation="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@id/img_container"
        app:layout_constraintStart_toStartOf="@id/img_container"
        android:textColor="@color/white"
        android:background="@drawable/img_position_background"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:background="@drawable/grid_item_foreground"
        android:id="@+id/grid_foreground"/>

</androidx.constraintlayout.widget.ConstraintLayout>