<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_marginBottom="18dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="#00000000"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Unnam"
        app:layout_constraintTop_toBottomOf="@id/doc_image_container"
        app:layout_constraintBottom_toTopOf="@id/doc_date"
        android:id="@+id/doc_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:background="#00000000"
        android:textColor="@color/black"
        android:text="10Jul"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/doc_date" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:layout_constrainedHeight="true"
        app:cardCornerRadius="7dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/doc_name"
        android:id="@+id/doc_image_container">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@color/black"
            android:layout_marginBottom="20dp"
            android:id="@+id/doc_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/doc_name"/>
        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>